<div class="container">
  <h1>All Mods</h1>
  <div class="categories-filter">
    <a href="/mods" class="active">All</a>
    <% categories.forEach(category => { %>
      <a href="/category/<%= category.slug %>"><%= category.name %></a>
    <% }); %>
  </div>
  <div class="mods-grid">
    <% mods.forEach(mod => { %>
      <a href="/mods/<%= mod.id %>" class="mod-card">
        <h3><%= mod.title %></h3>
        <p><%= mod.description || 'No description' %></p>
        <div class="mod-meta">
          <span>Version: <%= mod.version || 'N/A' %></span>
          <span>Downloads: <%= mod.totalDownloads %></span>
        </div>
      </a>
    <% }); %>
  </div>
</div>